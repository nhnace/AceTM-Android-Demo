<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.acecounter">

    <!-- TODO : Application class 등록해주세요. -->
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- TODO : DeepLink 유입을 위한 설정입니다. scheme 구성은 "ACE" + AceCounter SID 로 설정해 주십시요. -->
                <!-- ex) sid가 123456이라면 : ACE123456 -->
                <data
                    android:host="open"
                    android:scheme="ACE123456"
                    tools:ignore="AppLinkUrlError" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HybridActivity" />
    </application>

</manifest>